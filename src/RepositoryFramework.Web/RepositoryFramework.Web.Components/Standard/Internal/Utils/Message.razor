@namespace RepositoryFramework.Web.Components.Standard
@using Blazorise
@using Radzen.Blazor
@using Radzen;

@if (Feedback != null)
{
    <RadzenAlert Visible="@Feedback.IsVisible" Variant="Variant.Filled" AlertStyle="AlertStyle.Warning" Size="AlertSize.Medium" Shade="Shade.Darker" AllowClose=false>
        @Feedback.Message
        <RadzenButton Click=@(args => { Feedback.Ok(); Feedback.IsVisible = false; }) Text="@Feedback.Title" ButtonStyle="ButtonStyle.Primary" />
    </RadzenAlert>
}

@code {
    [Parameter]
    public RepositoryFeedback? Feedback { get; set; }
}
@namespace RepositoryFramework.Web.Components.Standard
@using System.Reflection;
@using Blazorise
@using System.Collections;
@using System.Text.Json;
@using Blazorise.DataGrid
@typeparam T

@if (Entity != null)
{
    <Row>
        <Column>
            @for (int i = 0; i < _primitives.Count; i += 2)
            {
                var value = _primitives[i];
                var nextValue = i + 1 < _primitives.Count ? _primitives[i + 1] : null;

                <Fields>
                    <InternalSingleEdit PropertyInfoKeeper="value" Context="Entity"></InternalSingleEdit>
                    @if (nextValue != null)
                    {
                        <InternalSingleEdit PropertyInfoKeeper="nextValue" Context="Entity"></InternalSingleEdit>
                    }
                </Fields>
            }
            @foreach (var complex in _complexes)
            {
                <Divider DividerType="DividerType.TextContent" Text="@complex.Name" />
                @if (complex.PropertyInfo.PropertyType.GetInterface(nameof(IEnumerable)) == null)
                {
                    @LoadNext(complex)
                }
            }
        </Column>
    </Row>
}
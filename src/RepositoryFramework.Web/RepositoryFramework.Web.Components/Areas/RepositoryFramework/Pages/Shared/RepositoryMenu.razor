@namespace RepositoryFramework.Web.Components
@using Radzen.Blazor

<RadzenPanelMenu class="w-100">
    @foreach (var app in AppMenu.Models)
    {
        <RadzenPanelMenuItem Text="@app.Value.ModelType.Name" Icon="explore">
            <RadzenPanelMenuItem Text="Query" Path="@($"../../../../Repository/{app.Value.ModelType.Name}/Query")" Icon="list"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Create" Path="@($"../../../../Repository/{app.Value.ModelType.Name}/Create")" Icon="add"></RadzenPanelMenuItem>
        </RadzenPanelMenuItem>
    }
</RadzenPanelMenu>

@code {
    [Inject]
    public AppMenu AppMenu { get; set; } = null!;
    [Inject]
    public AppSettings Settings { get; set; } = null!;
}
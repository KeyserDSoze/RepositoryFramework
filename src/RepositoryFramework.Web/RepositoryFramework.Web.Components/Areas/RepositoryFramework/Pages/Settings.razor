@page "/Repository/Settings"
@namespace RepositoryFramework.Web.Components

@if (_paletteKey != null && AppPaletteWrapper.Skins.Count > 1)
{
    <select class="form-control" @onchange=@((x) => ChangeSkin(x))>
        @foreach (var skin in AppPaletteWrapper.Skins)
        {
            if (_paletteKey == skin.Key)
            {
                <option value="@skin.Key" selected>
                    @skin.Key
                </option>
            }
            else
            {
                <option value="@skin.Key">
                    @skin.Key
                </option>
            }
        }
    </select>
}

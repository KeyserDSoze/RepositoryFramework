@using Microsoft.AspNetCore.Http;
@using RepositoryFramework.Web.Components;
@inject AppSettings Settings
@inject AppPaletteWrapper AppPaletteWrapper
@inject IHttpContextAccessor HttpContextAccessor

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="_content/Radzen.Blazor/css/default-base.css">
<link rel="stylesheet" href="_content/Microsoft.AspNetCore.Components.QuickGrid/Microsoft.AspNetCore.Components.QuickGrid.bundle.scp.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link href="_content/Rystem.RepositoryFramework.Web.Components/repository.css" rel="stylesheet" />

@{
    var palette = AppPaletteWrapper.Skins.First().Value;
    if (HttpContextAccessor.HttpContext.Request.Cookies.TryGetValue(Constant.PaletteKey, out var paletteKey) && AppPaletteWrapper.Skins.ContainsKey(paletteKey))
    {
        palette = AppPaletteWrapper.Skins[paletteKey];
    }
}

<style>
    :root {
        --primary: @(palette.Primary);
        --secondary: @(palette.Secondary);
        --success: @(palette.Success);
        --info: @(palette.Info);
        --warning: @(palette.Warning);
        --danger: @(palette.Danger);
        --light: @(palette.Light);
        --dark: @(palette.Dark);
        --link-color: @(palette.Link.Color);
        --link-hover-color: @(palette.Link.Hover);
        --btn-color: @(palette.Button.Color);
        --btn-bg: @(palette.Button.Background);
        --btn-hover-color: shade-color(@(palette.Button.Color), 10%);
        --btn-hover-bg: shade-color(@(palette.Button.Background), 15%);
        --bs-body-color: @(palette.BackgroundColor);
        --table-color: @(palette.Table.Color);
        --table-striped-color: @(palette.Table.StripedColor);
        --table-bg: @(palette.Table.Background);
        --table-striped-bg: @(palette.Table.StripedBackground);
    }

    body {
        background: var(--bs-body-color) !important;
        color: var(--dark) !important;
    }

    .table {
        --bs-table-color: var(--table-color);
        --bs-table-bg: var(--table-bg);
        --bs-table-border-color: var(--bs-border-color);
        --bs-table-striped-color: var(--table-striped-color);
        --bs-table-striped-bg: var(--table-striped-bg);
        color: var(--bs-table-color);
    }

    .navbar {
        --bs-navbar-color: var(--dark);
        --bs-navbar-brand-color: var(--dark);
        --bs-navbar-hover-color: opaque(var(--bs-navbar-color));
        --bs-navbar-disabled-color: opaque(var(--bs-navbar-color));
        --bs-navbar-active-color: color-contrast(var(--dark));
        --bs-navbar-brand-hover-color: opaque(var(--bs-navbar-color));
    }

    .dropdown-menu {
        --bs-dropdown-link-color: opaque(var(--dark));
        --bs-dropdown-link-hover-color: opaque(opaque(var(--dark)));
        --bs-dropdown-link-hover-bg: opaque(var(--bs-body-color));
        --bs-dropdown-link-active-color: opaque(opaque(var(--bs-body-color)));
        --bs-dropdown-link-active-bg: opaque(var(--primary));
        --bs-dropdown-link-disabled-color: color-contrast(var(--primary));
        --bs-dropdown-header-color: var(--dark);
        --bs-dropdown-color: var(--dark);
        --bs-dropdown-bg: var(--bs-body-color);
        --bs-dropdown-border-color: var(--bs-border-color-translucent);
        --bs-dropdown-divider-bg: var(--bs-border-color-translucent);
    }


    .form-control {
        min-height: 50px;
        font-size: @(Settings.Sizing.InputFontSize) !important;
    }

    input {
        font-size: @(Settings.Sizing.InputFontSize) !important;
    }

    .navbar-brand, .nav-item, .dropdown-item {
        font-size: @(Settings.Sizing.NavigationFontSize) !important;
    }

        .nav-item .active {
            font-weight: @(Settings.Sizing.NavigationFontWeight) !important;
        }

    .row {
        margin: 0px !important;
    }

    .dropdown-toggle::after {
        vertical-align: middle !important;
    }

    .table tbody > tr > td {
        vertical-align: middle;
    }

    .table-sticky th:first-child, .table-sticky td:first-child {
        position: sticky;
        left: 0px;
    }

    nav[b-3qssc0bm46] {
        float: right;
    }

    * {
        scrollbar-width: thin;
        scrollbar-color: var(--secondary) rgba(0,0,0,0);
    }

        *::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        *::-webkit-scrollbar-track {
            background: rgba(0,0,0,0);
        }

        *::-webkit-scrollbar-thumb {
            background-color: var(--secondary);
            border-radius: 10px;
            border: 3px solid rgba(0,0,0,0);
        }

    .col-options {
        min-width: 300px;
        margin-left: -50px;
    }

    .input-group-text {
        padding: 0px 10px !important;
    }

    button.bg-transparent {
        color: var(--dark) !important;
    }
</style>